@{
}
<h1>Add Client</h1>
<form method="post" action="Add" class="mt-5">

	<div class="mt-2">
		<label class="form-label">First Name</label>
		<input type="text" class="form-control" asp-for="FirstName" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="mt-2">
		<label class="form-label">Last Name</label>
		<input type="text" id="LastName" class="form-control" asp-for="LastName" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>

	<div class="mt-2">
		<label class="form-label">Phone Number</label>
		<input type="text" id="PhoneNumber" class="form-control" asp-for="PhoneNumber" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>

	<div class="mt-2">
		<label class="form-label">Email Address</label>
		<input type="text" id="EmailAddress" class="form-control" asp-for="EmailAddress" />
		<span asp-validation-for="EmailAddress" class="text-danger"></span>
	</div>

	<div class="mt-2">
		<label class="form-label">Address</label>
		<input type="text" class="form-control" id="Address" asp-for="Address" />
	</div>

	<div class="mt-2">
		<label class="form-label">Notes</label>
		<input type="text" class="form-control" id="Notes" asp-for="Notes" />
	</div>

	<div class="mt-2">
		<label class="form-label">Birthday</label>
		<input type="date" class="form-control" id="Birthday" asp-for="Birthday" />
		<span asp-validation-for="Birthday" class="text-danger"></span>
	</div>

	<div class="mt-2">
		<label class="form-label">UserType</label>
		<select class="form-control" id="UserType" asp-for="IsAdmin">
			<option value=true>Admin</option>
			<option value=false>Client</option>
		</select>
	</div>


	<br />
	<button class="btn btn-primary" type="submit" id="btnAdd">Add</button>
</form>