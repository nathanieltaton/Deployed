@model TESTIDENTITY.Models.UpdateClientViewModel;
@{
}

<h1>Edit Client</h1>
<form method="post" action="View" class="mt-5">
    <div class="mt-2">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-2">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>

    <div class="mt-2">
        <label class="form-label">Last Name</label>
        <input type="text" id="LastName" class="form-control" asp-for="LastName" />
    </div>

    <div class="mt-2">
        <label class="form-label">Phone Number</label>
        <input type="text" id="PhoneNumber" class="form-control" asp-for="PhoneNumber" />
    </div>

    <div class="mt-2">
        <label class="form-label">Email Address</label>
        <input type="text" id="EmailAddress" class="form-control" asp-for="EmailAddress" />
    </div>

    <div class="mt-2">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" id="Address" asp-for="Address" />
    </div>

    <div class="mt-2">
        <label class="form-label">Notes</label>
        <input type="text" class="form-control" id="Notes" asp-for="Notes" />
    </div>

    <div class="mt-2">
        <label class="form-label">Birthday</label>
        <input type="date" class="form-control" id="Birthday" asp-for="Birthday" />
    </div>

    <div class="mt-2">
        <label class="form-label">UserType</label>
        <select class="form-control" id="UserType" asp-for="IsAdmin">
            <option value=true>Admin</option>
            <option value=false>Client</option>
        </select>
    </div>
    <br />
    <button class="btn btn-primary" type="submit" id="btnAdd">Edit</button>
    <button class="btn btn-danger" asp-action="Delete" asp-controller="Client" id="btnDelete">Delete</button>
</form>
